<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.memo.post.dao.PostDAO">
 	<select id="selectPostList" parameterType="int" resultType="com.memo.post.model.Post">
 		SELECT
 			`id`
			,`userId`
			,`subject`
			,`content`
			,`imgUrl`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}	
 	</select>
 	<insert id="insertPost" parameterType="map">
 		INSERT INTO `post`
 		(
			`userId`
			,`subject`
			,`content`
			,`imgUrl`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{subject}
 			, #{content}
 			, #{imgUrl}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	 <select id="selectPostByPostId" parameterType="int" resultType="com.memo.post.model.Post">
 		SELECT
 			`id`
			,`userId`
			,`subject`
			,`content`
			,`imgUrl`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{id}	
 	</select>
 	<update id="updatePost" parameterType="map">
 		UPDATE 
 			`post`
 		SET
 			`subject` = #{subject}
 			, `content` = #{content}
 			, `updatedAt` = NOW()
			<!-- imgUrl이 있을 때에만 수정한다. -->
			<if test="imgUrl != null">
				, `imgUrl` = #{imgUrl}
			</if>
 		WHERE
 			`id` = #{id}
 	</update>
 </mapper>